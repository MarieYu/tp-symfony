{#pour étendre au fichier de vue par défaut (base.html.twig) qui définit le template de base#}
{% extends "ArticleBundle::layout.html.twig" %}

{% block title %} {{ parent() }} | Détail de l'article {{ article.id }} {%  endblock %}

{#pour rempplir le block body: #}
{% block body %}
    {{ parent() }}
    <h2>Détail d'un article</h2>

    <table>
        <tr>
            <td>Id</td>
            <td>{{ article.id }}</td>
        </tr>
        <tr>
            <td>Titre</td>
            <td>{{  article.title }}</td>
        </tr>
        <tr>
            <td>Description</td>
            <td>{{ article.description }}</td>
        </tr>

    </table>
    <div class="comments">
        <h3>Commentaires</h3>
        {% for comment in article.comments %}
            <p>{{ comment.createdAt|date('d-m-Y') }}</p>
            <p>{{ comment.content }}</p>
        {% endfor %}
    </div>

{% endblock %}



